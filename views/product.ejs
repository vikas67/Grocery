<%- include("./layout/header") %>


<link href="/css/boots.css" rel="stylesheet" type="text/css"/>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>


<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">

                </ol>
            </div>
            <h4 class="page-title">Create Product</h4>
        </div>
    </div>
</div>


<div class="tab-content">

    <div class="tab-pane show active" id="input-types-preview">

        <form action="" method="POST" enctype="multipart/form-data" autocomplete="off">


            <div class="card">
                <div class="card-body">
                    <div class="tab-content">

                        <br class="tab-pane show active" id="input-types-preview">

                        <h4 class="page-title">General Info</h4>


                        <div class="row">
                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Product Name</label>
                                    <input type="text" id="product_name" required="" name="product_name"
                                           class="form-control">
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="example-select" class="form-label">Category</label>
                                    <select class="form-select category" id="category" name="category"
                                            required="">
                                        <option value="null" selected="" disabled="">Select Category
                                        </option>
                                        <% category.forEach(row => { %>
                                            <option value="<%= row._id %>"><%= row.name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="example-select" class="form-label">Sub Category</label>
                                    <select class="form-select sub_category" id="sub_category"
                                            required="" name="sub_category">
                                        <option value="null" selected="" disabled="">Select Sub
                                            Category
                                        </option>
                                    </select>
                                </div>
                            </div>


                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="example-select" class="form-label">Keyword</label>
                                    <select class="form-select keyword" id="sub_category"
                                            required="" name="keyword">
                                        <option value="null" selected="" disabled="">Select keyword</option>
                                        <% keyword.forEach(row => { %>
                                            <option value="<%= row.slug %>"><%= row.name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>


                        </div>



                    </div>


                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="tab-content">

                        <div class="tab-pane show active" id="input-types-preview">

                            <h4 class="page-title">Product price &amp; stock</h4>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">Unit price</label>
                                        <input type="number" id="unit_price" name="unit_price"
                                               class="form-control" placeholder="0">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">Purchase
                                            price</label>
                                        <input type="number" id="purchase_price" name="purchase_price"
                                               class="form-control" placeholder="0">
                                    </div>
                                </div>
                            </div>

                            <div class="row">

                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">Dicount</label>
                                        <input type="number" id="discount" name="discount"
                                               class="form-control" placeholder="0">
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">Discount %
                                            Type</label>
                                        <select class="form-select" id="discountType"
                                                name="discountType">
                                            <option value="FLAT" selected="">Flat</option>
                                            <option value="PERCENT">Percent</option>
                                        </select>
                                    </div>
                                </div>

                            </div>


                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">Total
                                            Quantity </label>
                                        <input type="number" id="total_qty" name="total_qty"
                                               class="form-control" placeholder="0">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">Unit</label>
                                        <select class="form-select" id="unit"
                                                name="unit">
                                            <option value="GRAM" selected="">Gram</option>
                                            <option value="KG">Kg</option>
                                            <option value="PC">Pc</option>
                                            <option value="LTR">ltr</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane show active" id="input-types-preview">

                            <h4 class="page-title">Product Description</h4>

                            <div class="row">


                                <div class="col-12">
                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">Product Description</label>
                                        <textarea id="summernote" name="desciption"
                                                  class="form-control"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane show active" id="input-types-preview">

                            <div class="row">

                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <label for="example-fileinput" class="form-label">Upload
                                            thumbnail*</label>
                                        <input type="file" class="form-control product-img"
                                               name="product_thumb">
                                    </div>
                                </div>

                            </div>


                            <div class="row data-append ">

                                <div class="col-lg-8 col-xs-12">
                                    <div class="mb-3">
                                        <label for="example-fileinput" class="form-label">Upload product
                                            images* </label>
                                        <input type="file" class="form-control product-img"
                                               name="product_img">
                                    </div>
                                </div>
                                <div class="col-lg-4 col-xs-12">
                                    <div class="mb-3">
                                        <label for="example-fileinput" class="form-label"></label>
                                        <input type="button" class="form-control btn btn-info AddImg"
                                               value="Add">
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-6">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </form>

    </div>


</div>


<script>

    (function ($) {
        $('#summernote').summernote({});
    })(jQuery);


    $(document).ready(() => {
        $(".category").change(function () {
            let id = $(this).val();
            console.log(id)
            $.post("/admin/ajax/subcategory/fetch", {id}, data => {
                if (data.response) {
                    let html = ' <option value="null" disabled selected>Select Sub Category</option>';
                    for (i = 0; i < data.data.length; i++) {
                        html += '<option value="' + data.data[i]._id + '">' + data.data[i].name + '</option>';
                    }
                    $(".sub_category").html(html);
                }
            })
        });

        $('.AddImg').click(function () {

            let html = '<div class="row remove"> <div class="col-lg-8 col-xs-12">\n' +
                '<div class="mb-3">\n' +

                '<input type="file" class="form-control product-img" name="product_img">\n' +
                '</div>\n' +
                '</div>\n' +
                '<div class="col-lg-4 col-xs-12">\n' +
                '<div class="mb-3">\n' +

                '<input type="button" class="form-control btn btn-danger RemoveImg" value="Remove">\n' +
                '</div>\n' +
                '</div>\n' +
                '</div> ';
            $('.data-append').append(html);


            $('.RemoveImg').click(function () {
                $(this).parents('.remove').remove()
            })

        });

    })
</script>

<%- include("./layout/footer") %>
