<%- include('./layout/header', {dataTable:false}) %>

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">

                </ol>
            </div>
            <h4 class="page-title">Version control</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="tab-content">

                    <div class="tab-pane show active" id="input-types-preview">
                        <div class="row">
                            <div class="col-lg-6">

                                <form action="" method="POST" autocomplete="off">

                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">Old Version</label>
                                        <input type="text" id="old_version" name="old_version" class="form-control">
                                    </div>

                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">New Version</label>
                                        <input type="text" id="new_version" name="new_version" class="form-control">
                                    </div>


                                    <div class="mb-6">
                                        <button type="submit" class="btn btn-primary">Update</button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">

                <h4 class="header-title">Version Control</h4>

                <div class="tab-content">
                    <div class="tab-pane show active" id="basic-example-preview">
                        <div class="table-responsive-sm">
                            <table class="table table-centered mb-0">
                                <thead>
                                <tr>
                                    <th>Old Version</th>
                                    <th>New Version</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% version.forEach(row => { %>
                                    <tr>
                                        <td><%= row.old_version %></td>
                                        <td><%= row.new_version %></td>
                                    </tr>
                                <% }) %>
                                </tbody>
                            </table>
                            <div class="show-modal">
                                <div id="standard-modal" class="modal fade" tabindex="-1" role="dialog"
                                     aria-labelledby="standard-modalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-body text-center">
                                                <img src="/uploads/">
                                            </div>
                                            <div class="modal-footer">
                                                <input type="text" name="id" class="set_id" hidden disabled>
                                                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                                                    Close
                                                </button>
                                                <button type="button" class="btn btn-danger deleteCategory">Delete
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>

</div>


<%- include('./layout/footer', {dataTable:false}) %>